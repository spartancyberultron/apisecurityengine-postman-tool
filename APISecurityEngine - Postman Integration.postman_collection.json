						"exec": [
							"// Parse the response JSON",
							"var jsonData = pm.response.json();",
							"",
							"// Create an HTML template",
							"var template = `",
							"<html>",
							"<head>",
							"    <style>",
							"        body { font-family: Arial, sans-serif; line-height: 1.6; color: #333; }",
							"        .container { margin: 20px; }",
							"        h1 { color: #2c3e50; }",
							"        h2 { color: #34495e; margin-top: 20px; }",
							"        .vulnerability { background-color: #f9f9f9; padding: 15px; margin-bottom: 20px; border-radius: 5px; }",
							"        .severity { font-weight: bold; }",
							"        .severity.HIGH { color: #c0392b; }",
							"        .severity.MEDIUM { color: #e67e22; }",
							"        .severity.LOW { color: #f1c40f; }",
							"        ul { padding-left: 20px; }",
							"    </style>",
							"</head>",
							"<body>",
							"    <div class=\"container\">",
							"        <h2>Scan Result</h2>",
							"        ${jsonData.scanResult.vulnerabilities.map(vuln => `",
							"            <div class=\"vulnerability\">",
							"                <h3>${vuln.vulnerability.vulnerabilityName}</h3>",
							"                <p><strong>Severity:</strong> <span class=\"severity ${vuln.severity}\">${vuln.severity}</span></p>",
							"                <p><strong>Priority:</strong> ${vuln.priority}</p>",
							"                <p><strong>Description:</strong> ${vuln.description}</p>",
							"                <p><strong>Findings:</strong> ${vuln.findings.join(', ')}</p>",
							"                <h4>OWASP Categories:</h4>",
							"                <ul>",
							"                    ${vuln.vulnerability.owasp.map(o => `<li>${o}</li>`).join('')}",
							"                </ul>",
							"                <h4>CWE Categories:</h4>",
							"                <ul>",
							"                    ${vuln.vulnerability.cwe.map(c => `<li>${c}</li>`).join('')}",
							"                </ul>",
							"                <h4>Remediations:</h4>",
							"                <div>${vuln.remediation}</div> <!-- Render raw HTML content -->",
							"            </div>",
							"        `).join('')}",
							"    </div>",
							"</body>",
							"</html>",
							"`;",
							"",
							"// Set the visualization",
							"pm.visualizer.set(template, jsonData);",
